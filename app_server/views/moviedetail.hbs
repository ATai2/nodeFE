    <div data-page="moviedetail" class="page" data-title="影片详情">
        <div class="page-content">
            {{#each data.data}}
            <div class="bg-white">
                <img src="{{movie_bigpic}}" width="100%" height="200px" class="lazy lazy-loaded lazy-fadeIn">
                <div class="list-block media-list" style="height: 150px;">
                    <div class="item-content" style="position: absolute;border: none;top: 113px;width: 100%">
                        <div class="item-media radius" style="padding-top: 10px;"><img height="160px" width="120px" class="lazy lazy-loaded lazy-fadeIn" src="{{movie_bigpic}}" style="padding:2px;background: #fff;-moz-box-shadow:2px 2px 10px #777;-webkit-box-shadow:2px 2px 10px #777;box-shadow:2px 2px 10px #777;"></div>
                        <div class="item-inner">
                                <div class="item-title-row" style="padding-top: 20px;text-shadow: 2px 2px 2px #000;font-size: large;color: white">
                                    <div class="item-title"> {{movie_name}}</div>
                                </div>
                                <div class="item-title-row" style="margin-top: 35px">
                                    <div class="item-subtitle">{{filmlength}}</div>
                                    <div class="left" style="color: gold">{{score}}分</div>
                                </div>
                                <div class="item-subtitle" style="margin-top: 10px;overflow: hidden;">{{category}}</div>
                                <div class="item-subtitle" style="font-size: small;margin-top: 10px">{{publishdate}} 上映</div>
                        </div>
                    </div>
                    <div class="content-block" style="padding-top: 60px;margin-bottom: 0;border: hidden">
                        <div class="content-block-inner" style="font-size: small">
                            <h3 style="text-align: center">电影详情</h3>
                            <div class="row">
                                <div class="left detail" style="-webkit-line-clamp:1">导演:{{director}}</div>
                                <div class="right detail">国家:{{country}}</div>
                            </div>
                            <div class="row detail" style="-webkit-line-clamp:1">主演:{{cast}}</div>
                            <p class="detail" style="-webkit-line-clamp:7">{{brief}}</p>
                        </div>
                    </div>

                </div>
            </div>
                {{/each}}
        </div>
    </div>
</div>


