    <div class="footer">
        <div style="padding: 10px">
            <a href="#" class="button" style="background: white;color: black;border: none">完成</a>
        </div>
    </div>

</div>

<!-- Views-->
<div class="views">
    <!-- Your main view, should have "view-main" class-->
    <div class="view view-main">
        <div class="pages">
            {{{body}}}
        </div>
    </div>
</div>

<!-- Path to Framework7 Library JS-->
<script type="text/javascript" src="js/framework7.min.js"></script>
<!-- Path to weixin Library JS-->
<script type="text/javascript" src="js/jweixin-1.1.0.js"></script>
<script type="text/javascript" src="js/framework7.indexed-list.js"></script>
<!-- Path to your app js-->

<script>
    //wx
    var sign_pkg = '{{sign_pkg}}';
    var open_id = '{{open_id}}';
    var wx_share = undefined;
    var wechatConfigInit = false; //判断是否初始化成功
    if (sign_pkg != undefined) {
        wechatConfigInit = true;
        wx.config({
            debug: false,
            appId: '{{appId}}',
            timestamp: '{{timestamp}}',
            nonceStr: '{{nonceStr}}',
            signature: '{{signature}}',
            jsApiList: [
                'checkJsApi',
                'onMenuShareTimeline',
                'onMenuShareAppMessage',
                'onMenuShareQQ',
                'onMenuShareWeibo',
                'onMenuShareQZone',
                'hideMenuItems',
                'getNetworkType',
                'scanQRCode',
                'openLocation',
                'getLocation'
            ]
        });

    }

</script>
<script type="text/javascript" src="js/my-app.js"></script>
</body>
</html>
